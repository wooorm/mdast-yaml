{
  "name": "remark-yaml",
  "version": "2.0.0",
  "description": "Parse and stringify YAML code blocks in remark",
  "license": "MIT",
  "keywords": [
    "yaml",
    "parse",
    "parser",
    "serializer",
    "remark"
  ],
  "dependencies": {
    "js-yaml": "^3.2.0",
    "trim-trailing-lines": "^1.0.0"
  },
  "repository": "wooorm/remark-yaml",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^11.0.0",
    "eslint": "^1.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.3.0",
    "jscs": "^2.0.0",
    "jscs-jsdoc": "^1.0.0",
    "remark": "^3.0.0",
    "remark-github": "^2.0.0",
    "remark-lint": "^2.0.0",
    "remark-toc": "^2.0.0",
    "remark-usage": "^2.0.0",
    "remark-yaml-config": "^2.0.0",
    "mocha": "^2.0.0",
    "yaml": "^0.2.0"
  },
  "scripts": {
    "test-api": "mocha --check-leaks test.js",
    "test-coverage": "istanbul cover _mocha -- test.js",
    "test-travis": "npm run test-coverage",
    "test": "npm run test-api",
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "make": "npm run lint && npm run test-coverage",
    "bundle": "browserify --no-builtins -u esprima index.js -s remarkYAML > remark-yaml.js",
    "postbundle": "esmangle remark-yaml.js > remark-yaml.min.js",
    "build-md": "remark . --quiet --frail",
    "build": "npm run build-md && npm run bundle"
  }
}
